<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Switch
        android:id="@+id/wifi_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WiFi is OFF "
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_argument_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Argument A"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/argument_a"
        app:layout_constraintTop_toBottomOf="@+id/wifi_switch" />

    <EditText
        android:id="@+id/argument_a"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/wifi_switch"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:inputType="number"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_argument_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Argument B"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/argument_b"
        app:layout_constraintTop_toBottomOf="@+id/argument_a" />

    <EditText
        android:id="@+id/argument_b"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/argument_a"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:inputType="number"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="sum of A and B"
        app:layout_constraintTop_toBottomOf="@id/argument_b" />

    <TextView
        android:id="@+id/tv_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Sum of A and B"
        app:layout_constraintTop_toBottomOf="@id/bt_sum" />


</androidx.constraintlayout.widget.ConstraintLayout>